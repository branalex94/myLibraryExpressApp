extends layout

block content
  h1 #{title}: #{bookinstance._id}
  p copy:  #{bookinstance.book.title}
  p Status: #{bookinstance.status}
  p Due date: #{bookinstance.due_back_formatted}

  p Do you really want to delete this BookInstance?

  form(method='POST' action='')
    div.form-group
      input#bookinstance.form-control(type='hidden',name='bookinstanceid', required='true', value=bookinstance._id )

      button.btn.btn-primary(type='submit') Delete